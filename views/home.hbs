<!--data containe-->
{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Entry has been removed.
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Crud <span class="text-danger">Operation</span></h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-success align-self-center">+
      add user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company Name</th>
      <th scope="col">Party Name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td class="text-end">
          <a
            href="/edituser/{{this.id}}"
            type="button"
            class="btn btn-light btn-small bg-primary text-light"
          ><i class="bi bi-pencil"></i>
            Edit</a>
          <a
            href="/{{this.id}}"
            type="button"
            class="btn btn-light btn-small bg-danger text-light"
          ><i class="bi bi-person-x"></i> Delete</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>